= form_for @batch, :html => {:class=>"form-stacked"} do |f|
  -if @batch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@batch.errors.count, "error")} prohibited this batch from being saved:"
      %ul
        - @batch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.text_field :year
  .field
    = f.label :remarks
    = f.text_field :remarks
  .actions
    = f.submit 'Save'
