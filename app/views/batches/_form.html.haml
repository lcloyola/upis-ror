= form_for @batch do |f|
  -if @batch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@batch.errors.count, "error")} prohibited this batch from being saved:"
      %ul
        - @batch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :remarks
    = f.number_field :remarks
  .actions
    = f.submit 'Save'
