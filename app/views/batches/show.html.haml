= link_to 'New Student', "/students/new/#{@batch.id}"
|
= link_to 'Back', batches_path
%h1= "Batch #{@batch.year}"
.btn.btn-warning= link_to "Print Quarter Class Stubs", "/grades/quarter-report/batch/#{@batch.id}/landscape.pdf"
%table{:id => "sortable", :class => "zebra-striped tablesorter"}
  %thead
    %tr
      %th Student no
      %th Last
      %th Given
      %th Middle
      %th raw GWA for the year
      %th elvenpt GWA for the year
      %th{:colspan => 5 } Action
  %tbody
    - @students.each do |student|
      %tr
        %td= student.student_no
        %td.capslock= student.last
        %td.capslock= student.given
        %td.capslock= student.middle
        - if student.courses_year(Schoolyear.current).present?
          %td= student.gwa_raw_schoolyear(Schoolyear.current)
          %td= student.gwa_final_schoolyear(Schoolyear.current)
        - else
          %td
          %td
        %td= link_to 'Profile', student
        - unless is_faculty?
          %td= link_to 'Transcript', "/students/transcript/#{student.id}"
          %td= link_to 'Honorroll', "/students/honorroll/#{student.id}"
          %td= link_to 'Classcard', "/students/classcard/#{student.id}.pdf"
          %td= link_to 'Edit', edit_student_path(student)

