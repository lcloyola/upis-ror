= form_for @grade do |f|
  -if @grade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@grade.errors.count, "error")} prohibited this grade from being saved:"
      %ul
        - @grade.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :course
    = f.text_field :course
  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :quarter
    = f.number_field :quarter
  .field
    = f.label :value
    = f.number_field :value
  .actions
    = f.submit 'Save'
