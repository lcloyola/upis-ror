%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Upis"
    = csrf_meta_tags
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag    "application"
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.i-bar
            %span.i-bar
            %span.i-bar
          %a.brand{:href => root_path}UPIS Grade DB
          .container-fluid.nav-collapse
            %ul.nav
              %li= link_to "Log in!", new_user_session_path
    .container-fluid
      = yield
      #liz{:style => "position: fixed; width: 300px; right: 10px; bottom: 10px"}
        %img{:src => "/images/liz-grad.png", :style => "width: 250px; float: right; clear: both;"}
        %i{:style => "float: right; font-size: 15px; text-decoration: italicize bold;"} Likhang HopiangPaminta
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

