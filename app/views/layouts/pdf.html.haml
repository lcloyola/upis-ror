%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Upis"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = wicked_pdf_stylesheet_link_tag    "application"
    :css
      body {
        padding-top: 0px; /* 60px to make the container go all the way to the bottom of the topbar */
        margin-top: 0px;
        background: #FFF;
      }
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/

  %body
    .container-fluid
      .row-fluid
        %a= pdf_image_tag '/images/upislogo.JPG', :style => "width: 80px; padding: 0 5px; float: left;"
        %h2{:style => "float: left; clear: right;"} University of the Philippines Integrated School
        %p{:style => "padding: 15px;"}
        %h6 Katipunan Road, UP Diliman, Quezon City, Philippines
      .row-fluid
        .span16
          = yield

      %footer
        %p University of the Philippines Integrated School

