= form_for @schoolyear do |f|
  -if @schoolyear.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schoolyear.errors.count, "error")} prohibited this schoolyear from being saved:"
      %ul
        - @schoolyear.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start
    = f.number_field :start
  .field
    = f.label :remarks
    = f.text_area :remarks
  .actions
    = f.submit 'Save'
