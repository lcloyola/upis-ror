%p#notice= notice
.row-fluid
  .span4
    %h1= @section.name
    %h2
      A.Y.
      = @section.schoolyear.name
    %h3= @section.faculty.fullname
    %h4
      Batch:  
      = @section.batch.year
    %h4
      Grade Level:
      = @section.year

    = link_to 'Edit', edit_section_path(@section)
    \|
    = link_to 'Back', sections_path

  .span4
    %h3 Subjects
    %ul
    - @section.courses.each do |c|
      %li= link_to "#{c.subject.name} - #{c.faculty.last}", c

  -unless(@section.students.empty?)
    %table
      %thead
        %tr
          %th Student No
          %th Student
          %th Action
      %tbody
      - @section.members.each do |m|
        %tr
          %td= m.student.student_no
          %td= link_to m.student.fullname, m.student
          %td= link_to "unenroll" , "/sections/#{@section.id}/unenroll/#{m.student_id}"
        
        
= form_for(@section, :url => enroll_to_section_section_path) do |f|
  -if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = select_tag "students[]", options_from_collection_for_select(@students, "id","sn_fullname"), :multiple => true, :class =>"multiselect" 
  .actions
    = f.submit 'Save'
