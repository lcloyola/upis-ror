%h3 Transcript
%h1= @student.fullname
%h2= @student.student_no

%table{:id => "sortable", :class => "zebra-striped tablesorter"}
  %thead
    %tr
      %th Year
      %th Subject
      %th Grade
      %th Units
  %tbody
    - @student.my_courses.each do |c|
      %tr
        %td= "#{c.course.subject.year} : #{c.course.schoolyear.name}"
        %td= link_to c.course.subject.name, c.course
        - if @student.course_has_blank(c.course.id)
          %td n/a
        - else
          %td= c.course.student_average(@student.id)          
        %td= c.course.subject.units
