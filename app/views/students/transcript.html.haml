%h1= @student.fullname
%h2= @student.student_no

%ul.nav.nav-tabs
  %li.active= link_to "Transcript", "#"
  %li= link_to "Honor Roll", "#"
  %li= link_to "Profile", @student

%br
-#TODO: refactor!!!
- for i in 1..4
  %h4= "Year #{i}"
  %table{:id => "sortable", :class => "zebra-striped tablesorter"}
    %thead
      %tr
        %th Schoolyear
        %th Subject
        %th Grade
        %th Units
    %tbody
      - @student.my_courses.each do |c|
        - if c.course.subject.year == i
          %tr
            %td= c.course.schoolyear.name
            %td= link_to c.course.subject.name, c.course
            - if @student.course_has_blank(c.course.id)
              %td n/a
            - else
              %td= c.course.student_average(@student.id)          
            %td= c.course.subject.units
