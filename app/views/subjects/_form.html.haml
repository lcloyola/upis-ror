= form_for @subject, :html => {:class=>"form-stacked"} do |f|
  -if @subject.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subject.errors.count, "error")} prohibited this subject from being saved:"
      %ul
        - @subject.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :department
    = collection_select :subject, :department_id, Department.all, :id, :name
  .field
    = f.label :units
    = f.number_field :units, :precision => 2
  .field
    = f.label :year
    = f.number_field :year
  .actions
    = f.submit 'Save'
